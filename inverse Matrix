#include <stdio.h>

// Function to calculate the inverse of a 2x2 matrix
void invertMatrix(float matrix[2][2]) {
    float det = matrix[0][0] * matrix[1][1] - matrix[0][1] * matrix[1][0];

    if (det == 0) {
        printf("Matrix is singular. Inverse does not exist.\n");
        return;
    }

    float temp = matrix[0][0];
    matrix[0][0] = matrix[1][1] / det;
    matrix[0][1] = -matrix[0][1] / det;
    matrix[1][0] = -matrix[1][0] / det;
    matrix[1][1] = temp / det;
}

int main() {
    float matrix[2][2];

    // Input the matrix elements
    printf("Enter the elements of the 2x2 matrix:\n");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            if (scanf("%f", &matrix[i][j]) != 1) {
                printf("Error: Invalid input. Please enter numeric values.\n");
                return 1;
            }
        }
    }

    // Calculate and display the inverse of the matrix
    invertMatrix(matrix);
    printf("Inverse of the matrix:\n");
    printf("%f\t%f\n", matrix[0][0], matrix[0][1]);
    printf("%f\t%f\n", matrix[1][0], matrix[1][1]);

    return 0;
}
